{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/server.ts", "src/lib/**/*"],
  "exclude": ["node_modules", "dist", "src/frontend/**", "src/utils/**", "src/app.ts", "src/types/**", "src/lib/webrtc/**"]
}

